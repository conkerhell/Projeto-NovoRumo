@model  IEnumerable<NovoRumoProjeto.Areas.Admin.Models.AboutViewModel>



<div class="cell">
    <h1>Sobre</h1>
    @Html.EditButton("About")
    @Html.AddButton("About")
</div>

<div class="grid-x cell">
    <table class="unstriped">
        <thead>
            <tr>
                <th>Titulo</th>
                <th>Descrição</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <h4>@Html.ActionLink(item.t, "EditaPost", new { Id = item.Id })</h4>
                        <p>@item.Resumo</p>
                    </td>
                    <td>@item.Categoria</td>
                    <td>
                        @if (@item.Publicado)
                        {
                            @Html.Encode(item.DataPublicacao)
                        }
                        else
                        {
                            @Html.Raw("Não	Publicado")
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Excluir", "RemovePost", new { Id = item.Id })
                        @Html.ActionLink("Publicar", "PublicaPost", new { Id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
