@model  IEnumerable<NovoRumoProjeto.Areas.Admin.Models.AboutViewModel>



<div class="cell">
    <h1>Sobre</h1>
    @Html.EditButton("About", 0)
    @Html.AddButton("About")
</div>

<div class="grid-x cell">
    <table class="unstriped">
        <thead>
            <tr>
                <th>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.displayFileName)
                </th>
                <th></th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@Url.Content(item.displayFileName)" width="100" height="100" />
                </td>
                <td>
                    @Html.EditButton("About", item.ID) |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.ID })
                </td>
            </tr>
        }
    </table>
    


</div>
