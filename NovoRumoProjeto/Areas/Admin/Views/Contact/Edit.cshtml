@model NovoRumoProjeto.Areas.Admin.Models.ContactViewModel

<div class="cell">
    <div class="title-bar-admin">
        <h1>Alterar contato</h1>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="field" aria-describedby="telephoneHelp">
            @Html.LabelFor(model => model.Telephone)
            @Html.TextBoxFor(model => model.Telephone)
            @Html.ValidationMessageFor(model => model.Telephone)
        </div>
        <p class="help-text" id="telephoneHelp">*Campo Telefone aceita tags HTML de edição de texto como por exemplo: p, strong, i, br</p>

        <div class="field" aria-describedby="mobileHelp">
            @Html.LabelFor(model => model.Mobile)
            @Html.TextBoxFor(model => model.Mobile)
            @Html.ValidationMessageFor(model => model.Mobile)
        </div>
        <p class="help-text" id="mobileHelp">*Campo Celular aceita tags HTML de edição de texto como por exemplo: p, strong, i, br</p>

        <div class="field" aria-describedby="SecondaryMobileHelp">
            @Html.LabelFor(model => model.SecondaryMobile)
            @Html.TextBoxFor(model => model.SecondaryMobile)
            @Html.ValidationMessageFor(model => model.SecondaryMobile)
        </div>
        <p class="help-text" id="SecondaryMobileHelp">*Campo Celular Secundário aceita tags HTML de edição de texto como por exemplo: p, strong, i, br</p>

        <div class="field" aria-describedby="cepHelp">
            @Html.LabelFor(model => model.CEP)
            @Html.TextBoxFor(model => model.CEP)
            @Html.ValidationMessageFor(model => model.CEP)
        </div>
        <p class="help-text" id="cepHelp">*Campo CEP  aceita tags HTML de edição de texto como por exemplo: p, strong, i, br</p>

        <div class="field" aria-describedby="emailHelp">
            @Html.LabelFor(model => model.Email)
            @Html.TextBoxFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <p class="help-text" id="emailHelp">*Campo Email aceita tags HTML de edição de texto como por exemplo: p, strong, i, br</p>

        <div class="field" aria-describedby="addressHelp">
            @Html.LabelFor(model => model.Address)
            @Html.TextAreaFor(model => model.Address)
            @Html.ValidationMessageFor(model => model.Address)
        </div>
        <p class="help-text" id="addressHelp">*Campo Endereço aceita tags HTML de edição de texto como por exemplo: p, strong, i, br</p>

        @Html.SaveButton("Salvar")
    }
</div>
