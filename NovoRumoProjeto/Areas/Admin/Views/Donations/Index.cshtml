@model  IEnumerable<NovoRumoProjeto.Areas.Admin.Models.DonationViewModel>

<div class="cell">
    <div class=" grid-x title-bar-admin">
        <div class="small-6">
            <h1>Doação</h1>
        </div>
        <div class="small-6">
            <div class="float-right">

            </div>
        </div>
    </div>
</div>

<div class="grid-x cell">
    <table class="unstriped">
        <caption><p>Lista	de doações cadastradas na Novo Rumo.</p></caption>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OrderId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TypeId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NotificationCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PaypalGuid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Total)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RecordDate)
                </th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td> @item.OrderId</td>

                <td> @item.TypeId</td>

                <td>@item.UserId</td>

                <td>@item.NotificationCode</td>

                <td>@item.PaypalGuid</td>

                <td>@item.Total</td>

                <td>@item.RecordDate</td>
            </tr>
        }

    </table>
    @Html.RenderFlashMessages()
</div>
