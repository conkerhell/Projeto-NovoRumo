@model  IEnumerable<NovoRumoProjeto.Areas.Admin.Models.AidViewModel>

<div class="cell">
    <div class="grid-x title-bar-admin">
        <div class="small-6">
            <h1>Doação</h1>
        </div>
        <div class="small-6">
            <div class="float-right">

            </div>
        </div>
    </div>
</div>

<div class="grid-x cell">
    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OrderId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Total)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RecordDate)
                </th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td> @item.OrderId</td>
                <td>TODO: Exibir email e nome do usuario</td>
                <td>@item.Total</td>
                <td>@item.RecordDate</td>
                <td>@Html.ActionLink("Detalhar", "Detail")</td>
            </tr>
        }

    </table>
    @Html.RenderFlashMessages()
</div>
