@model IList<NovoRumoProjeto.Models.AboutViewModel>

<div class="blue-content text-center" id="quem-somos">
    <div class="grid-container">
        <h2>Quem somos</h2>

        <div class="grid-x">
            <div class="cell small-12 medium-6 responsive-bottom-space">
                <a data-toggle="open-text">
                    <img src="http://via.placeholder.com/500x250">
                </a>
            </div>
            <div class="cell small-12 medium-6">
                <a data-toggle="open-text">
                    <img src="http://via.placeholder.com/500x250">
                </a>
            </div>
        </div>
        @foreach (var item in Model)
        {
            <div class="reveal large" id="open-text" data-reveal data-close-on-click="true" data-animation-in="fade-in" data-animation-out="fade-out">
                <div class="grid-x">
                    <div class="small-12 medium-3 cell">
                        <h4>@item.Title</h4>
                    </div>
                    <div class="small-12 medium-9 cell">
                        <p>
                            @item.Description
                        </p>
                    </div>
                </div>
                <button class="close-button" data-close aria-label="Close reveal" type="button">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
    </div>
</div>



