@model IList<NovoRumoProjeto.Models.DailyViewModel>

<div class="grey-content text-center no-bottom-padding" id="dia-a-dia">
    <div class="cell text-center">
        <h3>Dia-a-dia</h3>
    </div>
    <div class="grid-x">
        <div class="small-12">
            <div class="pictures-carousel" role="region" aria-label="Fotos do Novo Rumo">
                @foreach (var item in Model)
                {
                    <div class="carousel-cell">
                        <a data-toggle="daily-@item.DailyID">
                            <div class="column small-12">
                                <p>
                                    <img src="@Url.Content(item.displayFileName)" alt="@item.displayFileName">
                                </p>
                            </div>
                            <div class="column small-12">
                                <p>@item.Title</p>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@foreach (var item in Model)
{
    <div class="reveal large" id="daily-@item.DailyID" data-reveal data-close-on-click="true" data-animation-in="fade-in" data-animation-out="fade-out">
        <div class="grid-x">
            <div class="small-12 medium-3 cell">
                <h4>@item.Title</h4>
            </div>
            <div class="small-12 medium-9 cell">
                <p>
                    @item.Description
                </p>
            </div>
        </div>
        <button class="close-button" data-close aria-label="Close reveal" type="button">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}