@model NovoRumoProjeto.Models.LoginViewModel

@{
    Layout = "~/Views/Shared/_SubLayout.cshtml";
}

<div class="grid-container">
    <h2>Identificação</h2>
</div>

<div class="small-12">
    @using (Html.BeginForm("Cadastrar", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="field">
            @Html.LabelFor(model => model.Email)
            @Html.TextBoxFor(model => model.Email, htmlAttributes: new { placeholder = "Ex. joaodasilva@gmail.com" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>

        <div class="field">
            @Html.LabelFor(model => model.Password)
            @Html.PasswordFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>

        <input type="submit" class="button expanded primary" value="Continuar" />
    }
    <p class="divisor">
        <span>ou</span>
    </p>
</div>
<div class="grid-container">
    <p>Novo doador? @Html.ActionLink("Doar sem cadastro", "Register")</p>
</div>