@model System.Web.Mvc.HandleErrorInfo

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Opa! Algo saiu fora do esperado</h2>
@{
    if (Request.IsLocal)
    {
        if (@Model != null && @Model.Exception != null)
        {
            <h3>Mensagem de erro</h3>
            <h3>@Model.Exception.Message</h3>
            <h4>StackTrace: </h4>
            <h4>@Model.Exception.StackTrace</h4>
        }
        else
        {
            <h3>Exceção nula</h3>
        }
    }
    else
    {
        <p>Nosso analista foi reportado sobre erro.</p>
    }
}

